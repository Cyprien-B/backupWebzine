@{
    this.ViewBag.Title = "Contacts";
}

<div class="container">
    <div class="row">
        <!-- Contenu principal (70% sur grand écran, 100% sur petit écran) -->
        <div class="col-lg-9 mb-4">
            <h1 class="mb-4">Contact</h1>
            <p class="mb-1">C.U.C.D.B - DIIAGE.</p>
            <p class="mb-1">69 Avenue Aristide Briand.</p>
            <p class="mb-3">21000 Dijon.</p>
            <div class="d-flex align-items-center">
                <i class="fa-solid fa-phone"></i>
                <p class="ms-2 mb-0">03 80 73 45 90</p>
            </div>
            <div class="d-flex align-items-center mb-4">
                <i class="fa-solid fa-envelope"></i>
                <a href="mailto:contact@exemple.com" class="ms-2 text-decoration-none mb-0">secretariat@cucdb.fr</a>
            </div>

            <h2 class="mb-4 pt-2">Suivez-nous</h2>
            <!-- Bloc des réseaux sociaux -->
            <div class="row g-4">
                <!-- Bloc Site officiel du DIIAGE -->
                <div class="col-md-4">
                    <a href="https://diiage.cucdb.fr" class="text-decoration-none text-reset">
                        <div class="card border-0 text-center p-3 bg-light">
                            <i class="fa-solid fa-link fs-2 text-primary"></i>
                            <p class="mt-2 text-primary">Site officiel du DIIAGE</p>
                        </div>
                    </a>
                </div>

                <!-- Bloc Facebook -->
                <div class="col-md-4">
                    <a href="https://www.facebook.com/diiage" class="text-decoration-none text-reset">
                        <div class="card border-0 text-center p-3 bg-light">
                            <i class="fab fa-facebook fs-2 text-primary"></i>
                            <p class="mt-2 text-primary">Facebook</p>
                        </div>
                    </a>
                </div>

                <!-- Bloc Instagram -->
                <div class="col-md-4">
                    <a href="https://www.instagram.com/diiage.cucdb" class="text-decoration-none text-reset">
                        <div class="card border-0 text-center p-3 bg-light">
                            <i class="fab fa-instagram fs-2 text-primary"></i>
                            <p class="mt-2 text-primary">Instagram</p>
                        </div>
                    </a>
                </div>

                <!-- Bloc LinkedIn -->
                <div class="col-md-4">
                    <a href="https://www.linkedin.com/company/diiage?originalSubdomain=fr" class="text-decoration-none text-reset">
                        <div class="card border-0 text-center p-3 bg-light">
                            <i class="fab fa-linkedin fs-2 text-primary"></i>
                            <p class="mt-2 text-primary">LinkedIn</p>
                        </div>
                    </a>
                </div>

                <!-- Bloc Google Maps -->
                <div class="col-md-4">
                    <a href="https://maps.app.goo.gl/3C7qrTUnLeEGpKQa6" class="text-decoration-none text-reset">
                        <div class="card border-0 text-center p-3 bg-light">
                            <i class="fa-solid fa-map fs-2 text-primary"></i>
                            <p class="mt-2 text-primary">Google Maps</p>
                        </div>
                    </a>
                </div>

                <!-- Bloc Twitter -->
                <div class="col-md-4">
                    <a href="https://twitter.com/DiiageCucdb" class="text-decoration-none text-reset">
                        <div class="card border-0 text-center p-3 bg-light">
                            <i class="fab fa-twitter fs-2 text-primary"></i>
                            <p class="mt-2 text-primary">Twitter</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sidebar (30% sur grand écran, 100% sur petit écran) -->
        <div class="col-lg-3">
            @await Component.InvokeAsync("StylesSidebar")
        </div>
    </div>
</div>