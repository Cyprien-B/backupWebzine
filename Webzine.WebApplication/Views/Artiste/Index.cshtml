@{
    ViewBag.Title = "Biographie " + Model.Nom;
}

@model Webzine.WebApplication.ViewModels.ArtisteViewModel.Artiste

<div class="container mt-4">
    <!-- Section Artiste -->
    <div class="mb-4">
        <h1>@Model.Nom</h1>
        <p>@Model.Biographie</p>
    </div>

    <!-- Section Albums -->
    <div>
        <h2>Albums</h2>

        @foreach (var album in Model.Albums)
        {
            <div class="row align-items-start mb-4">
                <div class="col-md-2">
                    <img src="@album.ImageUrl" class="img-fluid rounded" alt="@album.Nom">
                </div>
                <div class="col-md-10">
                    <h4>@album.Nom</h4>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Durée</th>
                                <th>Titre</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var titre in album.Titres)
                            {
                                <tr>
                                    <td>@TimeSpan.FromSeconds(titre.Duree).ToString(@"mm\:ss")</td>
                                    <td><a href="@titre.UrlEcoute" class="text-decoration-none">@titre.Libelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>