@model Webzine.WebApplication.ViewModels.RechercheModel

@{
    this.ViewBag.Title = $"Recherche : {Model.TermeRecherche}";
}

<div class="container-fluid mt-4 mt-md-5">
    <div class="row">
        <!-- Contenu principal -->
        <div class="col-12 col-lg-10 mb-4">
            <h1 class="h4 mb-4">Résultats de la recherche pour "<span>@Model.TermeRecherche</span>"</h1>
            <hr class="mb-4" />

            <!-- Section Artistes -->
            <div class="mb-5">
                <h2 class="h4 mb-3">Artistes</h2>
                <partial name="~/Views/Shared/_ArtisteList.cshtml" for="@Model.Artistes" />
            </div>

            <!-- Section Titres -->
            <div>
                <h2 class="h4 mb-3">Titres</h2>
                <partial name="~/Views/Shared/_TitreList.cshtml" for="@Model.Titres" />
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-12 col-lg-2">
            @await Component.InvokeAsync("StylesSidebar")
        </div>
    </div>
</div>