@using Webzine.Entity;
@model Webzine.WebApplication.Areas.Administration.ViewModels.AdministrationStyleModel;

@{
    Style displayStyle = new();
    this.ViewBag.Title = "Admnistration des Styles";
}

<h1 class="mb-4">Styles</h1>
<hr />
<a asp-action="Create" class="btn btn-primary"><b>+</b> Ajouter un nouveau style</a>
<br />
<br />
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-secondary">
            <tr class="border-0">
                <th class="border-0">@Html.DisplayNameFor(m => displayStyle.Libelle)</th>
                <th class="border-0 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var style in Model.Styles)
            {
                <tr>
                    <td>@style.Libelle</td>
                    <td class="text-center">
                        <a asp-area="Administration" asp-controller="Style" asp-action="Edit" asp-route-id="@style.IdStyle" class="btn btn-sm p-0 me-2 text-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-area="Administration" asp-controller="Style" asp-action="Delete" asp-route-id="@style.IdStyle" class="btn btn-sm p-0 text-primary">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div class="container">
        <div class="row">
            @{
                uint pageSuivante = Model.PaginationActuelle + 1;
                uint pagePrecedente = Model.PaginationActuelle - 1;
            }
            <div class="col-md-6 col-sm-6">
                @if (Model.PaginationActuelle > 1)
                {
                    <a asp-action="Index" asp-route-page="@pagePrecedente" class="btn btn-secondary">&laquo; Page précédente</a>
                }
            </div>
            <div class="col-md-6 col-sm-6 text-end">
                @if (Model.PaginationActuelle < Model.PaginationMax)
                {
                    <a asp-action="Index" asp-route-page="@pageSuivante" class="btn btn-secondary">Page suivante &raquo;</a>
                }
            </div>
        </div>
    </div>
</div>