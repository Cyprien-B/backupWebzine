@model Webzine.WebApplication.Areas.Administration.ViewModels.AdministrationCommentairesModel

@{
    this.ViewBag.Title = "Administration des Commentaires";
}

<h1 class="mb-4">Commentaires</h1>
<hr />
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-secondary">
            <tr class="border-0">
                <th class="border-0">@Html.DisplayNameFor(m => @Model.Commentaire.Titre.Libelle)</th>
                <th class="border-0">@Html.DisplayNameFor(m => @Model.Commentaire.Auteur)</th>
                <th class="border-0">@Html.DisplayNameFor(m => @Model.Commentaire.Contenu)</th>
                <th class="border-0">@Html.DisplayNameFor(m => @Model.Commentaire.DateCreation)</th>
                <th class="border-0 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var commentaire in Model.Commentaires)
            {
                <tr>
                    <td>@commentaire.Titre.Libelle</td>
                    <td>@commentaire.Auteur</td>
                    <td class="text-center">@commentaire.Contenu</td>
                    <td class="text-center">@commentaire.DateCreation.ToShortDateString()</td>
                    <td class="text-center">
                        <a asp-area="Administration" asp-controller="Commentaire" asp-action="Delete" asp-route-id="@commentaire.IdCommentaire" class="btn btn-sm p-0 text-primary">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>