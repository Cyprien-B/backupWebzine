@model Webzine.WebApplication.Areas.Administration.ViewModels.CreationAndEditionTitreModel

@{
    this.ViewBag.Title = "Modifier un titre";
}

<h1 class="mb-4">Ajouter un titre</h1>
<hr />

<form asp-controller="Titre" asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Titre.DateCreation" value=@DateTime.Now />
    <input type="hidden" asp-for="Titre.IdTitre" value="@Model.Titre.IdTitre" />
    <div class="row g-3">
        <div class="col-sm-12">
            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label asp-for="Titre.Artiste.Nom" class="col-form-label"></label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-10">
                    <select asp-for="Titre.IdArtiste" class="form-select" required>
                        @foreach (var artiste in Model.Artistes)
                        {
                            <option value="@artiste.IdArtiste" selected="@(artiste.IdArtiste == Model.Titre.IdArtiste)">
                                @artiste.Nom
                            </option>
                        }
                    </select>
                    <span asp-validation-for="Titre.IdArtiste" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label asp-for="Titre.Libelle" class="col-form-label"></label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Titre.Libelle" class="form-control" required />
                    <span asp-validation-for="Titre.Libelle" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label asp-for="Titre.Album" class="col-form-label"></label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Titre.Album" class="form-control" required />
                    <span asp-validation-for="Titre.Album" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label asp-for="Titre.Chronique" class="col-form-label"></label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-10">
<textarea asp-for="Titre.Chronique" class="form-control" rows="9" required></textarea>
                    <span asp-validation-for="Titre.Chronique" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label asp-for="Titre.DateSortie" class="col-form-label"></label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Titre.DateSortie" class="form-control" type="date" required />
                    <span asp-validation-for="Titre.DateSortie" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <label asp-for="Titre.Duree" class="col-form-label"></label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-4">
                    <div class="input-group">
                        <input asp-for="Titre.Duree" class="form-control" type="number" min="1" required />
                        <span class="input-group-text">secondes</span>
                    </div>
                    <span asp-validation-for="Titre.Duree" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">
                        <span>@Html.DisplayNameFor(m => m.Titre.UrlJaquette)</span><span class="text-danger">*</span>
                    </label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Titre.UrlJaquette" class="form-control" required />
                    <span asp-validation-for="Titre.UrlJaquette" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label asp-for="Titre.UrlEcoute" class="col-form-label"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Titre.UrlEcoute" class="form-control" />
                    <span asp-validation-for="Titre.UrlEcoute" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Styles</label>
                </div>
                <div class="col-sm-10">
                    <div class="row">
                        @foreach (var style in Model.Styles)
                        {
                            <div class="col-sm-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           value="@style.IdStyle"
                                           id="style_@style.IdStyle"
                                           name="selectedStyleIds" checked="@Model.Titre.Styles.Any(s => s.Libelle == style.Libelle)">
                                    <label class="form-check-label" for="style_@style.IdStyle">@style.Libelle</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <span asp-validation-for="Titre.Styles" class="text-danger"></span>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Nb de lectures</label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-10">
                    <label class="form-control-plaintext">@Model.Titre.NbLectures</label>
                    <input type="hidden" asp-for="Titre.NbLectures" value="@Model.Titre.NbLectures" />
                </div>
            </div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Nb de likes</label><label class="text-danger">*</label>
                </div>
                <div class="col-sm-10">
                    <label class="form-control-plaintext">@Model.Titre.NbLikes</label>
                    <input type="hidden" asp-for="Titre.NbLikes" value="@Model.Titre.NbLikes" />
                </div>
            </div>
            <div class="row g-3 align-items-center mb-3">
                <div class="col-sm-2 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Modifier</button>
                </div>
            </div>
        </div>
    </div>
</form>

